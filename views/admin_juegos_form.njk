{% extends "admin_base.njk" %}
{% block titulo %}JUEGOS | {% if juego.id %} Editar {% else %} Nuevo {% endif %}{% endblock %}
{% block contenido %}
    <h1>Formulario de juegos</h1>
    {% if juego.id %}
    <form action="/juegos/{{ juego.id }}" method="post" class="w-50" enctype="multipart/form-data">
    {% else %}
    <form action="/juegos" method="post" enctype="multipart/form-data" class="w-50">
    {% endif %}
      <div class="form-group">  
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" id="nombre" name="nombre" value="{{ juego.nombre }}" class="form-control">
      </div>
      <div class="form-group">
        <label for="descripcion" class="form-label">Descripción</label>
        <textarea id="descripcion" name="descripcion" class="form-control">{{ juego.descripcion }}</textarea>
      </div>
      <div class="form-group">
        <label for="edad" class="form-label">Edad recomendada</label>
        <input type="number" id="edad" name="edad" value="{{ juego.edad }}" class="form-control">
      </div>
      <div class="form-group">
        <label for="jugadores" class="form-label">Número de jugadores</label>
        <input type="number" id="jugadores" name="jugadores" value="{{ juego.jugadores }}" class="form-control">
      </div>
      <div class="form-group">
        <label for="tipo" class="form-label">Tipo de juego</label>
        <select id="tipo" name="tipo" class="form-control">
          <option value="rol" {{ 'selected' if juego.tipo == 'rol' else '' }}>Rol</option>
          <option value="escape" {{ 'selected' if juego.tipo == 'escape' else '' }}>Escape</option>
          <option value="dados" {{ 'selected' if juego.tipo == 'dados' else '' }}>Dados</option>
          <option value="fichas" {{ 'selected' if juego.tipo == 'fichas' else '' }}>Fichas</option>
          <option value="cartas" {{ 'selected' if juego.tipo == 'cartas' else '' }}>Cartas</option>
          <option value="tablero" {{ 'selected' if juego.tipo == 'tablero' else '' }}>Tablero</option>
        </select>
      </div>
      <div class="form-group">
        <label for="precio" class="form-label">Precio</label>
        <input type="number" id="precio" name="precio" value="{{ juego.precio }}" class="form-control">
      </div>
      <div class="form-group">
        <label for="imagen" class="form-label">Imagen</label>
        <input type="file" id="imagen" name="imagen" class="form-control">
      </div>
      {% if juego.id %}
      <input type="hidden" name="_method" value="put"/>
      {% endif %}
      <button type="submit" class="btn btn-primary mt-2">Enviar</button>
    </form>
{% endblock %}