{% extends "admin_base.njk" %}
{% block titulo %}Formulario juegos{% endblock %}
{% block contenido %}
    <html>
  <head>
    <title>Formulario de edición de juegos</title>
  </head>
  <body>
    <h1>Formulario de edición de juegos</h1>
    <form action="/juegos" method="{{ juego ? 'PUT' : 'POST' }}" enctype="multipart/form-data">
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" value="{{ juego.nombre }}">
        <br>
        <label for="descripcion">Descripción</label>
        <textarea id="descripcion" name="descripcion">{{ juego.descripcion }}</textarea>
        <br>
        <label for="edad">Edad recomendada</label>
        <input type="number" id="edad" name="edad" value="{{ juego.edad }}">
        <br>
        <label for="jugadores">Número de jugadores</label>
        <input type="number" id="jugadores" name="jugadores" value="{{ juego.jugadores }}">
        <br>
        <label for="tipo">Tipo de juego</label>
        <select id="tipo" name="tipo">
            <option value="rol" {{ juego.tipo == "rol" ? "selected" : "" }}>Rol</option>
            <option value="escape" {{ juego.tipo == "escape" ? "selected" : "" }}>Escape</option>
            <option value="dados" {{ juego.tipo == "dados" ? "selected" : "" }}>Dados</option>
            <option value="fichas" {{ juego.tipo == "fichas" ? "selected" : "" }}>Fichas</option>
            <option value="cartas" {{ juego.tipo == "cartas" ? "selected" : "" }}>Cartas</option>
            <option value="tablero" {{ juego.tipo == "tablero" ? "selected" : "" }}>Tablero</option>
        </select>
        <br>
        <label for="precio">Precio</label>
        <input type="number" id="precio" name="precio" value="{{ juego.precio }}">
        <br>
        <label for="imagen">Imagen</label>
        <input type="file" id="imagen" name="imagen">
        <br>
        <input type="submit" value="Enviar">
    </form>
  </body>
</html>
{% endblock %}